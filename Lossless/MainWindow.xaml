<Window x:Class="Lossless.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1100">
    <Grid>
        <TabControl x:Name="tabItems">
            <TabItem Header="General">
                <Viewbox>
                    <Grid Height="513">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="150*"/>
                        </Grid.RowDefinitions>

                        
                        <TextBox x:Name="loaded_text" HorizontalAlignment="Left" Margin="20,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="415" Width="575" Grid.RowSpan="2"/>
                        <Button Background="LightYellow" HorizontalAlignment="left" Width="160" Content="Display diagram" Click="GenerateChart_Click" Margin="435,247,0,10" Grid.Row="1"/>
                        <Button Background="LightBlue" HorizontalAlignment="left" Width="160" Content="Load file" Click="LoadText_Click" Margin="20,247,0,10" Grid.Row="1"/>
                        <Button Background="LightGreen" HorizontalAlignment="left" Width="160" Content="Count characters" Click="CountAll_Click" Margin="231,247,0,10" Grid.Row="1"/>
                        <DataGrid x:Name="charactersTable" HorizontalAlignment="Center" VerticalAlignment="Stretch" AutoGenerateColumns="False"
                                  Margin="627,99,10,10" Width="449" Grid.RowSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn MinWidth="100" Header="Character" Binding="{Binding Key}" />
                                <DataGridTextColumn MinWidth="100" Header="Sum" Binding="{Binding Value}" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Content="Statistics" HorizontalAlignment="Left" Margin="627,68,0,0" VerticalAlignment="Top" Width="300"/>
                        <Label Content="Total" HorizontalAlignment="Left" Margin="627,32,0,0" VerticalAlignment="Top" Width="110" Height="31"/>
                        <Label Content="Entropy" HorizontalAlignment="Left" Margin="817,32,0,0" VerticalAlignment="Top" Width="110" Height="31"/>
                        <TextBox IsReadOnly="True" x:Name="char_num" HorizontalAlignment="Left" Margin="715,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="75" RenderTransformOrigin="0,0.412"/>
                        <TextBox IsReadOnly="True" x:Name="entropy" HorizontalAlignment="Left" Margin="898,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="178" RenderTransformOrigin="0,0.412"/>

                    </Grid>
                </Viewbox>
            </TabItem>
            <TabItem x:Name="ChartTabItem" Header="Chart" >
                <DVC:Chart Grid.Row="1"  Name="mcChart" Margin="10">
                    <DVC:Chart.Series>
                        <DVC:ColumnSeries IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}">
                            <DVC:ColumnSeries.DataPointStyle>
                                <Style TargetType="DVC:ColumnDataPoint">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DVC:ColumnDataPoint">
                                                <Grid>
                                                    <Rectangle Fill="{TemplateBinding Background}" Stroke="Black"/>
                                                    <Grid Margin="0 -20 0 0" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                        <TextBlock Text="{TemplateBinding FormattedDependentValue}" Margin="2"/>
                                                    </Grid>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DVC:ColumnSeries.DataPointStyle>
                        </DVC:ColumnSeries>
                    </DVC:Chart.Series>
                </DVC:Chart>
            </TabItem>
            <TabItem Header="About" />

        </TabControl>

    </Grid>
</Window>
